<?xml version="1.0"?>
<odoo>
        <!--  Add payment options to sale.order and invoice forms -->
        <record model="ir.ui.view" id="payment_payperse_option_config">
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='payment_acquirer']" position="inside">
                    <button name='%(payment.action_payment_acquirer)d' type="action" string="Configure payment acquiring methods" class="oe_link" />
                </xpath>
            </field>
        </record>
</odoo>
